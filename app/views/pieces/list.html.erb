<div class="container" id="list">
  <div class="row">
    <% @pieces.each do |piece| %>
      <% if piece.quantity != 0 %>
    <div class="col-xs-6 col-md-3 cell">
      <div class="thumbnail">
        <%= image_tag piece.img_file %>
        <div class="caption">
          <h3><%= piece.item %></h3>
          <% if clearance_discount(piece) != 1 %>
            <p class="sale">On Clearance!</p>
          <% end %>
          <p><%= number_to_currency(clearance_discount(piece) * piece.price.to_i, precision: 0) %></p>
          <p><a href="/pieces/<%= piece.pid %>" class="btn btn-default" role="button">More Info</a></p>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
  </div>
</div>
