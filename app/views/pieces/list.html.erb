<div id="list">
  <div class="home"><span class="glyphicon glyphicon-home"></span></div>
  <div class="back"><span class="glyphicon glyphicon-arrow-left"></span></div>
  <% @pieces.each do |piece| %>
  <div class="row">
  <div class="col-md-3">
    <div class="thumbnail">
      <%= image_tag piece.img_file %>
      <div class="caption">
        <h3><%= piece.item %></h3>
        <p><%= number_to_currency(piece.price, precision: 0) %></p>
        <!-- <p><a href="#" class="btn btn-primary" role="button">More Info</a></p> -->
        <%= link_to 'More Info', "/pieces/#{piece.id}" %>
      </div>
    </div>
  </div>
</div>
  <% end %>
</div>
